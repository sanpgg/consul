<!DOCTYPE html>
<html lang="es">

  <head>
    <%= render "layouts/common_head", default_title: "Admin" %>
    <%= content_for :head %>
  </head>

  <body class="admin" data-watch-form-message="<%= I18n.t('layouts.admin.watch_form_message') %>">
    <div class="container-fluid no-gutters">
        <div id="offCanvas">
          <div class="show-for-small-only">
            <%= side_menu %>
          </div>
        </div>

        <div>
          <%= render 'layouts/admin_header' %>
          <div class="row">
            <div class="col-md-3">
              <div class="show-for-small-only">
                <button type="button" class="button hollow expanded"><%= t("admin.menu.admin") %></button>
              </div>
              <div id="side_menu" class="hide-for-small-only">
                <%= side_menu %>
              </div>
            </div>
            <div class="admin-content col-md-9">
              <%= render 'layouts/flash' %>
              <%= yield %>
            </div>
          </div>
        </div>
      </div>
  </body>
</html>
